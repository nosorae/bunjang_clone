<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/recycle_recommend_profile_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:foreground="@drawable/my_shop_profile_image_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/no_profile_image" />

        <TextView
            android:id="@+id/recycle_recommend_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="3dp"
            android:text="TextView"
            android:textColor="@color/blackForText"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/recycle_recommend_profile_image"
            app:layout_constraintTop_toTopOf="@+id/recycle_recommend_profile_image" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="상품"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/recycle_recommend_profile_name"
            app:layout_constraintTop_toBottomOf="@+id/recycle_recommend_profile_name" />

        <TextView
            android:id="@+id/recycle_recommend_num_of_selling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/blackForText"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView51"
            app:layout_constraintStart_toEndOf="@+id/textView51"
            app:layout_constraintTop_toTopOf="@+id/textView51" />

        <TextView
            android:id="@+id/textView57"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  · 팔로워"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/recycle_recommend_num_of_selling"
            app:layout_constraintStart_toEndOf="@+id/recycle_recommend_num_of_selling"
            app:layout_constraintTop_toTopOf="@+id/recycle_recommend_num_of_selling" />

        <TextView
            android:id="@+id/recycle_recommend_num_of_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/blackForText"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView57"
            app:layout_constraintStart_toEndOf="@+id/textView57"
            app:layout_constraintTop_toTopOf="@+id/textView57" />

        <View
            android:id="@+id/view3"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:background="@color/gray_background"
            app:layout_constraintBottom_toBottomOf="@+id/recycle_recommend_is_follow"
            app:layout_constraintEnd_toStartOf="@+id/recycle_recommend_is_follow"
            app:layout_constraintTop_toTopOf="@+id/recycle_recommend_is_follow" />

        <ImageView
            android:id="@+id/recycle_recommend_is_follow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/button_follow_default" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/recycle_recommend_product_image1"
                android:layout_width="127dp"
                android:layout_height="127dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/recycle_recommend_product_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="12dp"
                android:text="12,000원"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/recycle_recommend_product_image2"
                android:layout_width="127dp"
                android:layout_height="127dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/recycle_recommend_product_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="12dp"
                android:text="12,000원"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/recycle_recommend_product_image3"
                android:layout_width="127dp"
                android:layout_height="127dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/recycle_recommend_product_price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="12dp"
                android:text="12,000원"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>