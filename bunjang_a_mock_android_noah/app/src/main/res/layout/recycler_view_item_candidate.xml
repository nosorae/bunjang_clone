<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@drawable/add_item_button_camera_background"
        app:cardCornerRadius="10dp">


        <ImageView
            android:id="@+id/recylcer_item_candidate_image"
            android:layout_width="90dp"
            android:layout_height="88dp"
            android:background="@drawable/add_item_button_camera_background"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/recylcer_item_candidate_button_remove"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:background="@drawable/global_remove_button_background"
            android:gravity="center"
            android:text="X"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />


    </androidx.cardview.widget.CardView>


</FrameLayout>