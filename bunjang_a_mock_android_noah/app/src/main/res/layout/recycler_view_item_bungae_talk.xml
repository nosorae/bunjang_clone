<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/recycler_bungae_seller_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:foreground="@drawable/my_shop_profile_image_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/recycler_bungae_recent_talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="6dp"
        android:maxLines="1"
        android:text="최근 대화 내용"
        android:textColor="#201E1E"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_bungae_seller_image"
        app:layout_constraintStart_toEndOf="@+id/recycler_bungae_seller_image" />

    <TextView
        android:id="@+id/recycler_bungae_seller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:maxLines="1"
        android:text="상점명"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/recycler_bungae_recent_talk"
        app:layout_constraintStart_toEndOf="@+id/recycler_bungae_seller_image" />

    <ImageView
        android:id="@+id/imageView66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/global_more" />

    <TextView
        android:id="@+id/recycler_bungae_notification"
        android:layout_width="13dp"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/add_item_gallery_item_num_background"
        android:gravity="center_horizontal|top"
        android:text="4"
        android:textColor="#FFFFFF"
        android:textSize="11sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView66"
        app:layout_constraintTop_toBottomOf="@+id/recycler_bungae_recent_talk_time" />

    <TextView
        android:id="@+id/recycler_bungae_recent_talk_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="4dp"
        android:text="오후 9:01"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView66"
        app:layout_constraintTop_toTopOf="@+id/recycler_bungae_seller_image" />
</androidx.constraintlayout.widget.ConstraintLayout>